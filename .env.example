# Environment Configuration Template
# Copy this file to .env and update the values

# SuperSlicer Configuration
SUPERSLICER_PATH=C:\Path\To\SuperSlicer\superslicer_console.exe

# Email Configuration (Optional - for order notifications)
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_RECIPIENT=orders@yourcompany.com

# SMTP Configuration (Optional - Gmail is default)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
PORT=5000
DEBUG=True

# Application Settings
COST_PER_HOUR=3.0